---
interface Props {
  title: string;
  module: number;
  description: string;
  href: string;
  lessonCount: number;
  comingSoon?: boolean;
}

const { title, module, description, href, lessonCount, comingSoon = false } = Astro.props;
---

{comingSoon ? (
  <div
    class="block bg-white border-2 border-dashed border-gray-300 rounded-xl p-6 relative overflow-hidden opacity-75"
  >
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-gray-300 to-gray-400"></div>
    <div class="flex items-center justify-between mb-3">
      <span class="text-sm font-semibold text-propel-blue bg-propel-cyan-light/30 px-3 py-1 rounded-full">Module {module}</span>
      <span class="text-sm font-semibold text-amber-600 bg-amber-50 px-3 py-1 rounded-full flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        Coming Soon
      </span>
    </div>
    <h2 class="text-xl font-bold text-propel-navy mb-2">{title}</h2>
    <p class="text-gray-600 leading-relaxed">{description}</p>
    <div class="mt-5 flex items-center text-gray-400 font-semibold">
      Under construction
      <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
      </svg>
    </div>
  </div>
) : (
  <a
    href={href}
    class="group block bg-white border-2 border-transparent rounded-xl p-6 hover:shadow-xl hover:border-propel-cyan transition-all duration-300 relative overflow-hidden"
  >
    <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-propel-cyan to-propel-blue"></div>
    <div class="flex items-center justify-between mb-3">
      <span class="text-sm font-semibold text-propel-blue bg-propel-cyan-light/30 px-3 py-1 rounded-full">Module {module}</span>
      <span class="text-sm text-gray-500 font-medium">{lessonCount} lessons</span>
    </div>
    <h2 class="text-xl font-bold text-propel-navy mb-2 group-hover:text-propel-blue transition-colors">{title}</h2>
    <p class="text-gray-600 leading-relaxed">{description}</p>
    <div class="mt-5 flex items-center text-propel-orange font-semibold group-hover:gap-2 transition-all">
      Start learning
      <svg class="w-5 h-5 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </a>
)}
