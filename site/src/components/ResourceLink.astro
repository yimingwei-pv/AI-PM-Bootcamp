---
interface Props {
  title: string;
  url: string;
  type?: 'docs' | 'video' | 'repo' | 'article';
}

const { title, url, type = 'docs' } = Astro.props;

const typeConfig = {
  docs: { icon: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z', color: 'text-propel-blue' },
  video: { icon: 'M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z', color: 'text-red-500' },
  repo: { icon: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4', color: 'text-propel-navy' },
  article: { icon: 'M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z', color: 'text-propel-orange' },
};

const config = typeConfig[type];
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="group flex items-center gap-3 p-4 bg-white border border-gray-200 rounded-xl hover:border-propel-cyan hover:shadow-md transition-all duration-200"
>
  <div class={`w-10 h-10 rounded-lg bg-propel-gray flex items-center justify-center ${config.color}`}>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={config.icon} />
    </svg>
  </div>
  <span class="flex-1 text-propel-navy font-medium group-hover:text-propel-blue transition-colors">{title}</span>
  <svg class="w-4 h-4 text-propel-cyan group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
  </svg>
</a>
