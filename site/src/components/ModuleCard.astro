---
interface Props {
  title: string;
  module: number;
  description: string;
  href: string;
}

const { title, module, description, href } = Astro.props;
---

<a
  href={href}
  class="group block bg-white border border-gray-200 rounded-xl p-5 hover:shadow-lg hover:border-propel-cyan transition-all duration-300"
>
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0 w-11 h-11 bg-gradient-to-br from-propel-blue to-propel-cyan text-white rounded-xl flex items-center justify-center font-bold text-lg shadow-md">
      {module}
    </div>
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-propel-navy mb-1 group-hover:text-propel-blue transition-colors">{title}</h3>
      <p class="text-gray-600 text-sm leading-relaxed">{description}</p>
    </div>
    <svg class="w-5 h-5 text-propel-cyan flex-shrink-0 mt-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </div>
</a>
