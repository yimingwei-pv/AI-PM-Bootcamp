---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ModuleCard from '../../components/ModuleCard.astro';

const allModules = await getCollection('modules');
const sortedModules = allModules.sort((a, b) => {
  if (a.data.module !== b.data.module) return a.data.module - b.data.module;
  return a.data.lesson - b.data.lesson;
});

// Group lessons into their parent modules
const moduleGroups = [
  {
    number: 1,
    title: "Foundations of AI",
    description: "Understand the technology behind LLMs, agents, and context engineering.",
    lessons: sortedModules.filter(m => m.data.module === 1),
  },
  {
    number: 2,
    title: "Improving Productivity with AI",
    description: "Use AI in your own work â€” mindset, prompting, prototyping, and workflow automation.",
    lessons: sortedModules.filter(m => m.data.module === 2),
  },
  {
    number: 3,
    title: "Finding the Right AI Opportunities",
    description: "Find and validate AI use cases with practical frameworks and exercises.",
    lessons: sortedModules.filter(m => m.data.module === 3),
  },
  {
    number: 4,
    title: "Shipping AI Features",
    description: "Design and deliver AI features with quality, safety, and measurable impact.",
    lessons: sortedModules.filter(m => m.data.module === 4),
  },
];
---

<Layout title="AI Product Management">
  <!-- Course Header -->
  <section class="bg-propel-navy text-white py-12 relative overflow-hidden">
    <div class="absolute right-0 top-1/2 -translate-y-1/2 w-32 md:w-48 opacity-40 pointer-events-none">
      <img src="/AI-PM-Bootcamp/flying-spaceman.png" alt="" class="w-full" />
    </div>
    <div class="max-w-4xl mx-auto px-4 md:px-8 relative z-10">
      <nav class="mb-6">
        <a href="/AI-PM-Bootcamp/" class="text-propel-cyan hover:text-white transition-colors inline-flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to courses
        </a>
      </nav>
      <h1 class="text-3xl md:text-4xl font-bold mb-4">
        AI Product Management
      </h1>
      <p class="text-lg text-white/80 max-w-2xl">
        Master AI foundations, boost PM productivity with AI tools, identify high-value AI opportunities, and ship AI features with quality.
      </p>
    </div>
  </section>

  <!-- Grouped Modules -->
  <div class="max-w-4xl mx-auto px-4 md:px-8 py-12 space-y-10">
    {moduleGroups.map((group) => (
      <section>
        <!-- Module Group Header -->
        <div class="flex items-center gap-4 mb-4">
          <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-propel-blue to-propel-cyan text-white rounded-xl flex items-center justify-center font-bold text-base shadow-md">
            {group.number}
          </div>
          <div>
            <h2 class="text-xl font-bold text-propel-navy">{group.title}</h2>
            <p class="text-sm text-gray-500">{group.description}</p>
          </div>
        </div>

        <!-- Lessons -->
        <div class="space-y-3 ml-14">
          {group.lessons.map((lesson) => (
            <a
              href={`/AI-PM-Bootcamp/modules/${lesson.slug.replace(/^module-\d+\//, '')}/`}
              class="group block bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md hover:border-propel-cyan transition-all duration-300"
            >
              <div class="flex items-center gap-3">
                <span class="flex-shrink-0 text-xs font-semibold text-propel-blue bg-propel-cyan-light/30 px-2 py-0.5 rounded-full">
                  {group.number}.{lesson.data.lesson}
                </span>
                <h3 class="text-base font-semibold text-propel-navy group-hover:text-propel-blue transition-colors flex-1">
                  {lesson.data.title}
                </h3>
                <svg class="w-4 h-4 text-propel-cyan flex-shrink-0 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
              <p class="text-gray-500 text-sm mt-1 ml-[calc(2rem+0.75rem)]">{lesson.data.description}</p>
            </a>
          ))}
        </div>
      </section>
    ))}

    <!-- Module 5: Coming Soon -->
    <section class="opacity-75">
      <div class="flex items-center gap-4 mb-4">
        <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-gray-300 to-gray-400 text-white rounded-xl flex items-center justify-center font-bold text-base shadow-md">
          5
        </div>
        <div class="flex-1">
          <div class="flex items-center gap-3">
            <h2 class="text-xl font-bold text-propel-navy">Operating AI Products at Scale</h2>
            <span class="text-xs font-semibold text-amber-600 bg-amber-50 px-2.5 py-1 rounded-full flex items-center gap-1">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Coming Soon
            </span>
          </div>
          <p class="text-sm text-gray-500">Establish organisation operating model for responsible AI.</p>
        </div>
      </div>
      <div class="ml-14">
        <div class="block bg-white border-2 border-dashed border-gray-300 rounded-lg p-4 text-center">
          <p class="text-gray-400 text-sm">Lessons for this module are under construction. Check back soon!</p>
        </div>
      </div>
    </section>

  </div>
</Layout>
