---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ModuleCard from '../../components/ModuleCard.astro';

const modules = await getCollection('modules', ({ data }) => data.course === 2);
const sortedModules = modules.sort((a, b) => a.data.module - b.data.module);
---

<Layout title="Course 2: AI Workflows & Engineering">
  <!-- Course Header -->
  <section class="bg-propel-navy text-white py-12 relative overflow-hidden">
    <div class="absolute right-0 top-1/2 -translate-y-1/2 w-32 md:w-48 opacity-40 pointer-events-none">
      <img src="/ai-bootcamp-pages/flying-spaceman.png" alt="" class="w-full" />
    </div>
    <div class="max-w-4xl mx-auto px-4 md:px-8 relative z-10">
      <nav class="mb-6">
        <a href="/ai-bootcamp-pages/" class="text-propel-cyan hover:text-white transition-colors inline-flex items-center gap-1">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Back to courses
        </a>
      </nav>
      <h1 class="text-3xl md:text-4xl font-bold mb-4">
        AI Workflows & Engineering
      </h1>
      <p class="text-lg text-white/80 max-w-2xl">
        Build production-ready AI workflows with frameworks, agentic development, and human-in-the-loop patterns.
      </p>
    </div>
  </section>

  <!-- Modules List -->
  <div class="max-w-4xl mx-auto px-4 md:px-8 py-12">
    <section class="space-y-4">
      {sortedModules.length > 0 ? (
        sortedModules.map((module) => (
          <ModuleCard
            title={module.data.title}
            module={module.data.module}
            description={module.data.description}
            href={`/ai-bootcamp-pages/course-2/${module.slug.replace('course-2/', '')}/`}
          />
        ))
      ) : (
        <p class="text-gray-500 italic">Modules coming soon...</p>
      )}
    </section>

    <!-- Previous Course Link -->
    <div class="mt-12 p-6 bg-white rounded-xl border border-gray-200 flex flex-col md:flex-row items-center justify-between gap-4">
      <div>
        <p class="text-sm text-gray-500 mb-1">Previous</p>
        <h3 class="text-lg font-semibold text-propel-navy">Module 1: Elements of AI Engineering</h3>
      </div>
      <a href="/ai-bootcamp-pages/course-1/" class="btn-secondary whitespace-nowrap">
        View Module 1
      </a>
    </div>
  </div>
</Layout>
